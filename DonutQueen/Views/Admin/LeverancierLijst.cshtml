@model DonutQueen.ViewModels.LeverancierOverviewViewModel;
@{
    ViewData["Title"] = "Admin - Leveranciers";
}

<h1 class="mt-5">@ViewData["Title"]</h1>
<a class="button" asp-action="DonutPerLeverancier">Donuts per leverancier</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>LeverancierId</th>
        <th>Naam</th>
        <th>Contactpersoon</th>
        <th>Emailadres</th>
        <th>Adres</th>
        <th>Postcode</th>
        <th></th>
    </tr>
    @foreach (var leverancier in Model.Leveranciers)
    {
        <tr>
            <td>@leverancier.LeverancierId</td>
            <td>@leverancier.LeveranciersNaam</td>
            <td>@leverancier.VoornaamContact @leverancier.FamilienaamContact</td>
            <td>@leverancier.Emailadres</td>
            <td>@leverancier.Straat @leverancier.Huisnummer</td>
            <td>@leverancier.Postcode</td>
            <td><a class="button" asp-action="DonutsToewijzen" asp-route-id="@leverancier.LeverancierId">Donuts toewijzen</a></td>
        </tr>
    }
</table>
